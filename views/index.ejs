<div class="container-fluid">
    <div class="row" >
        <div class="col-sm-3 col-md-2 sidebar" ng-show="isLoggedIn()">
            <ul class="nav nav-sidebar">
                <li><a href="#/">Pulpit <span class="badge">{{ammountOfTasks}}</span></a></li>
                <li class="dropdown "ng-show="adminMode">
                    <a  class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" >Użytkownicy <span class="caret"></span></a>
